<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8000000"
    tools:context=".Login"
    android:orientation="vertical"
    android:weightSum="9">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5">

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6">

        <TextView
            android:id="@+id/welcomeback"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:text="Welcome back!"
            android:textAlignment="textStart"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/pleaselogin"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_below="@id/welcomeback"
            android:layout_centerHorizontal="true"
            android:text="Please login into your account."
            android:textAlignment="textStart"
            android:textColor="#9CFFFFFF"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/email"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_below="@id/pleaselogin"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/userdetails"
            android:hint="Email Address"
            android:textAlignment="textStart"
            android:textColorHint="#9CFFFFFF"
            android:textSize="16dp" />

        <View
            android:layout_width="280dp"
            android:layout_height="1dp"
            android:layout_below="@id/email"
            android:layout_centerInParent="true"
            android:layout_marginTop="8dp"
            android:background="#9CFFFFFF" />

        <EditText
            android:id="@+id/password"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/email"
            android:textColor="@color/white"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="58dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/userdetails"
            android:hint="Password"
            android:textAlignment="textStart"
            android:textColorHint="#9CFFFFFF"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/forgotpassword"
            android:layout_width="137dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/userdetails"
            android:hint="Forgot?"
            android:textColorHint="#69678E"
            android:textSize="16dp" />

        <View
            android:id="@+id/line"
            android:layout_width="280dp"
            android:layout_height="1dp"
            android:layout_below="@id/password"
            android:layout_centerInParent="true"
            android:layout_marginTop="8dp"
            android:background="#9CFFFFFF" />


        <Button
            android:id="@+id/loginbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/login_button"
            android:text="LOGIN"
            android:textStyle="bold" />
        <Button
            android:id="@+id/loginwithphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/loginbutton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/login_button"
            android:text="LOGIN WITH PHONE"
            android:textStyle="bold" />

        <Button
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/loginwithphone"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/register_button"
            android:text="REGISTER NOW"
            android:textStyle="bold" />

    </RelativeLayout>

</LinearLayout>