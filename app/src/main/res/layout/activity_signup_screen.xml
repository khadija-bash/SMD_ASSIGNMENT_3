<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8000000"
    tools:context=".SignupScreen"
    android:orientation="vertical"
    android:weightSum="10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6">

        <TextView
            android:id="@+id/welcomeback"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:text="Welcome!"
            android:textAlignment="textStart"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/pleaselogin"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_below="@id/welcomeback"
            android:layout_centerHorizontal="true"
            android:text="Create your account."
            android:textAlignment="textStart"
            android:textColor="#9CFFFFFF"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/email1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_below="@id/pleaselogin"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/userdetails"
            android:hint="Email Address"
            android:textAlignment="textStart"
            android:textColorHint="#9CFFFFFF"
            android:textSize="16dp" />

        <View
            android:id="@+id/line1"
            android:layout_width="280dp"
            android:layout_height="1dp"
            android:layout_below="@id/email1"
            android:layout_centerInParent="true"
            android:layout_marginTop="8dp"
            android:background="#9CFFFFFF" />

        <EditText
            android:id="@+id/password1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_below="@id/line1"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="58dp"
            android:background="@drawable/userdetails"
            android:hint="Password"
            android:textAlignment="textStart"
            android:textColorHint="#9CFFFFFF"
            android:textSize="16dp" />

        <View
            android:id="@+id/line2"
            android:layout_width="280dp"
            android:layout_height="1dp"
            android:layout_below="@id/password1"
            android:layout_centerInParent="true"
            android:layout_marginTop="8dp"
            android:background="#9CFFFFFF" />

        <EditText
            android:id="@+id/confirmpassword"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_below="@id/line2"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="58dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/userdetails"
            android:hint="Confirm Password"
            android:textAlignment="textStart"
            android:textColorHint="#9CFFFFFF"
            android:textSize="16dp" />

        <View
            android:id="@+id/line3"
            android:layout_width="280dp"
            android:layout_height="1dp"
            android:layout_below="@id/confirmpassword"
            android:layout_centerInParent="true"
            android:layout_marginTop="8dp"
            android:background="#9CFFFFFF" />


        <Button
            android:id="@+id/btnsignup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/login_button"
            android:text="SIGN UP"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnlogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnsignup"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/register_button"
            android:text="LOGIN"
            android:textStyle="bold" />

    </RelativeLayout>

</LinearLayout>